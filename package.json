        "react-i18next": "^12.1.4",
        "react-query": "^3.39.3",
        "styled-components": "^5.3.6"
    },
    "lint-staged": {
        "*.{tsx, ts, js, jsx}": [
            "yarn eslint --fix",
            "yarn stylelint",
            "yarn prettier --write"
        ],
        "*.json": [
            "prettier --write"
        ]
    },
    "pre-commit": "lint:staged"

{
    "name": "bahmni-mf-template",
    "version": "0.0.3",
    "scripts": {
        "build": "webpack --mode production",
        "build:dev": "webpack --mode development",
        "build:start": "cd dist && npx http-server -p=9001 -P=http://localhost:8080",
        "start": "webpack serve --open --mode development",
        "start:live": "webpack serve --open --mode development --live-reload --hot",
        "eslint": "eslint src/**/*.{ts,tsx} src/*.{ts,tsx}",
        "eslint:fix": "eslint --fix 'src/**/*.{ts,tsx}'",
        "stylelint": "stylelint src/**/*.{js,jsx,ts,tsx}",
        "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css,md,json}'",
        "test": "jest --config ./config/jest.config.js --coverage",
        "test:watch": "yarn run test --watch",
        "lint:staged": "lint-staged"
    },
    "license": "MIT",
    "devDependencies": {
